{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "Node",
    "lib": [],
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./src/index.ts"],
  "exclude": ["node_modules"]
}
