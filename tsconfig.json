{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "Node",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["./src/index.ts"]
}
